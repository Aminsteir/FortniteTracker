<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/button_background_more_opaque"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/exitText"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:background="@drawable/radialbackgroundwhite"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newsHeadlinePopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="News Headline"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageHeadlinePopup"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:src="@color/colorPrimary" />

    <TextView
        android:id="@+id/newsDescriptionPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:paddingBottom="25dp"/>

</LinearLayout>